@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-TW">
<!-- saved from url=(0014)about:internet -->

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.WebName-@ViewBag.Title::@Resources.Res.System_FrontName</title>
    <script src="~/Scripts/cdn/BrowerInfo.js"></script>
    <script>
        var gb_approot = '@Url.Content("~")';
    </script>
    <link href="~/Content/css/page.css?v=@CommWebSetup.CacheVer" rel="stylesheet">
    <link href="~/Content/css/vendor/icomoon.css?v=@CommWebSetup.CacheVer" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic' rel='stylesheet' type='text/css'>
    @RenderSection("css", false)
</head>

<body class="@ViewBag.BodyClass">
    
    <div id="wrapper">

        <header id="header">
            <div class="wrap">

                <h1 class="logo">
                    <span class="parent">@Resources.Res.System_FrontName</span>
                    <span class="child"><a href="~/Neighbor/Content">@ViewBag.WebName 社區入口網</a></span>
                </h1>

                <ul class="topNav list-inline">
                    <li><a href="~/Plan" target="_blank"><i class="icon-cart"></i>申請專屬社區網站</a></li>
                </ul>

                <nav id="menu" class="navbar">
                    <h2 class="sr-only">主選單</h2>
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="~/Neighbor/Content/#intro" class="scroll"><i class="icon-reading"></i>社區簡介</a>
                        </li>
                        <li>
                            <a href="~/Neighbor/Content/#feature" class="scroll"><i class="icon-diamond"></i>社區特色</a>
                        </li>
                        <li>
                            <a href="~/Neighbor/Content/#gallery" class="scroll"><i class="icon-view"></i>社區實景．公設</a>
                        </li>
                        <li>
                            <a href="~/Neighbor/Content/#diary" class="scroll"><i class="icon-book"></i>社區日誌</a>
                        </li>
                        @if (@ViewBag.BodyClass.IndexOf("pro1") >= 0 ) {
                        <li>
                            <a href="~/Neighbor/Sell_list"><i class="icon-house"></i>社區待售房屋</a>
                        </li>
                        <li>
                            <a href="~/Neighbor/Rent_list"><i class="icon-building"></i>社區待租房屋</a>
                        </li>
                        }
                        else if (@ViewBag.BodyClass.IndexOf("pro2") >= 0 ) {
                        <li>
                            <a href="~/Neighbor/Sell_list2"><i class="icon-house"></i>社區待售房屋</a>
                        </li>
                        <li>
                            <a href="~/Neighbor/Rent_list2"><i class="icon-building"></i>社區待租房屋</a>
                        </li>
                        }
                        <li>
                            <a href="http://www.jojogo168.com/" target="new"><i class="icon-cart"></i>社區好康團購</a>
                        </li>
                        <li>
                            <a href="~/Neighbor/Content/#contact" class="scroll"><i class="icon-mail"></i>聯絡方式</a>
                        </li>
                    </ul>
                </nav>

            </div><!-- wrap //-->
        </header><!-- header //-->

        <main id="main">

            <h1 class="sr-only">桃園-國王城堡-@ViewBag.Title::@Resources.Res.System_FrontName</h1>

            @RenderBody()

        </main>

    </div><!-- wrapper //-->

    <footer id="footer">
        <div class="wrap">
            <h1 class="logo"><a href="~/Index" target="new" title="@Resources.Res.System_FrontName">@Resources.Res.System_FrontName</a></h1>
            <div class="copyright">Happiness Agent &copy; 2016</div>
            <ul class="social list-inline">
                <li><a href="https://www.facebook.com/754952781302809/" target="new"><i class="icon-fb"></i><span class="sr-only">Facebook</span></a></li>
                <li><a href=""><i class="icon-gplus"></i><span class="sr-only">Google+</span></a></li>
            </ul>
            <ul class="contact list-inline">
                <li><i class="icon-home"></i><span class="sr-only">地址</span>新北市樹林區學成路655號9樓</li>
                <li><i class="icon-phone"></i><span class="sr-only">電話</span>02-3501-6715</li>
                <li><i class="icon-mail"></i><span class="sr-only">E-mail</span><a href="ahagentcom@gmail.com">ahagentcom@gmail.com</a></li>
            </ul>
            <a href="#header" class="goTop scroll img-circle"><i class="icon-angle"></i></a>
        </div>
    </footer><!-- footer -->

    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="~/Content/js/jquery.lazyload.min.js"></script>
    <script type="text/javascript">
        // Lazyload
        $("img.lazy").lazyload({effect : "fadeIn"});

        // 回頂端 & menu fixed
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) {
                $('.goTop').fadeIn();
            } else {
                $('.goTop').fadeOut();
            }
            if ($(this).scrollTop() > 262) {
                $('#menu').addClass('fixed');
            } else {
                $('#menu').removeClass('fixed');
            }
        });
        $('.scroll').click(function () {
          var hash = $(this).attr('href').split('#')[1];
          $('html, body').animate({
            scrollTop: $("#"+hash).offset().top - 50
          }, 2000);
          return false;
        });
    </script>
    @RenderSection("Scripts", required: false)

</body>
</html>